            "hash": "d41614f84753f02378d3dc4f21e51468dfcbffa0cf600b06db689171e3172ff3",
            "extract_dir": "mercury_122.0.2_win64/mercury"
        }
    },
    "post_install": [
        "Remove-Item \"$dir/pingsender.exe\"",
        "mercury -CreateProfile \"Scoop $persist_dir\\profile\"",
        "$Addition = \"$persist_dir\\addition\"",
        "if (Test-Path $Addition) {",
        "  info 'Copying additional items...'",
        "  Copy-Item -Path $Addition\\* -Destination $dir -Force -Recurse -ErrorAction SilentlyContinue",
        "}"
    ],
    "bin": "mercury.exe",
    "shortcuts": [
        [
            "mercury.exe",
            "Mercury"
        ],
        [
            "mercury.exe",
            "Mercury Profile Manager",
            "-P"
        ]
    ],
    "persist": [
        "distribution",
        "profile"
    ],
    "checkver": {
        "url": "https://api.github.com/repositories/510134922/releases",
        "jsonpath": "$[0].tag_name",
        "regex": "v\\.([\\w.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Alex313031/Mercury/releases/download/v.$version/mercury_$version_win64_AVX.zip",
                "extract_dir": "mercury_$version_win64/mercury"
            }
        }
    }
}
